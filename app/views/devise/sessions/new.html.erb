<div class="posts_container">
  <div class="sprout">
    <h2 class="posts_front"><i class="fas fa-carrot"></i>ログイン</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-container">
      <div class="form-main">
        <p class="p_b">ログイン</p>
        <div class="form-inner">
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
  
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
  
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン状態を維持する %>
            </div>
          <% end %>
  
          <div class="actions">
            <%= f.submit "ログイン" %>
            <p class="links_btn"><%= render "devise/shared/links" %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
