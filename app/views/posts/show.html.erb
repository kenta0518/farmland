<div class="farm_show">
  <div class="sprout">
    <h2 class="posts_front"><i class="fas fa-carrot"></i>農場詳細</h2>
  </div>
    <div class="farm_show_top">
        <h3><%= @post.p_name %></h3>
    </div>
  <div class="show_contents">
    <div class="show_image">
      <% if @post.p_image.file.nil? %>
        <p><%= image_tag "no_image.jpeg",class: "show_farm_image"%></p>
      <% else %>
        <p><%= image_tag @post.p_image.url,class: "show_farm_image" %></p>
      <% end %>
    </div>
    <div class="show_reservations">
      <%= form_for [@post, @post.reservations.new] do |f| %>
        <h4 class="reser_title"><i class="fas fa-carrot"></i>予約フォーム<i class="fas fa-carrot"></i></h4>
        <div class="contents-wrapper">
          <div class="contents-row">
            <label class="span-contents_r"><i class="fas fa-seedling"></i>   借りたい日</label>
            <div class="form_contents_r">
              <%= f.date_field :start_date %>
            </div>
          </div>
        </div>
        <div class="contents-wrapper">
          <div class="contents-row">
            <label class="span-contents_r"><i class="fas fa-seedling"></i>   返す日</label>
            <div class="form_contents_r">
              <%= f.date_field :end_date %>
            </div>
          </div>
        </div>
        <%= f.hidden_field :user_id,:value => current_user.id%>
        <%= f.hidden_field :post_id,:value => @post.id%>
        <div class="contents-wrapper">
          <p class="top-contents_r">
            <%= f.submit "この日程で仮予約する" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="farm_show_info">
    <h4><i class="fab fa-pagelines"></i>  農園紹介</h4>
    <p><%= @post.p_introduction %></p>
  </div>
  <table class="show_table">
    <tbody>
      <tr>
        <th>農園所有者名</th>
        <td><%= @user.username %></td>
      </tr>
      <tr>
        <th>農園名</th>
        <td><%= @post.p_name %></td>
      </tr>
      <tr>
        <th>場所</th>
        <td><%= @post.p_adress %></td>
      </tr>
      <tr>
        <th>月額利用料金</th>
        <td><%= @post.p_price %>円</td>
      </tr>
      <tr>
        <th>面積</th>
        <td><%= @post.p_menseki %>㎡</td>
      </tr>
    </tbody>
  </table>
</div>